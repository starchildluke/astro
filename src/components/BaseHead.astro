  ---
import site from '../data/site.json';

const {
  title,
  metaTitle,
  description,
  image = site.url + 'images/ld-logo-og-image.jpg',
  robotsTag,
  stylesheetURL
} = Astro.props;

const canonicalURL = Astro.url;
const blogRssFeed = `${site.url}blog.xml`;

---
<html lang="en-GB">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
<title>{metaTitle ? metaTitle : title}</title>
<link rel="stylesheet" type="text/css" href={stylesheetURL ? `/style/${stylesheetURL}` : "/style/style.css"}>
<link rel="preload" as="font" href="/fonts/DMSerifDisplay-Regular-subset.woff2" type="font/woff2" crossorigin>
<link rel="preload" as="font" href="/fonts/NyghtSerif-Light-subset.woff2" type="font/woff2" crossorigin>
<script async src="https://plausible.io/js/pa-juzxS8GCoNHZxPt1EMkES.js"></script>
<script>window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};plausible.init()</script>
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" href="/favicon.png" />
<meta name="robots" content={robotsTag ? robotsTag : "index, follow"} />
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta property="og:image" content={image} />
<meta name="generator" content={Astro.generator}>
<meta name="values" content="Free Palestine, Black Lives Matter, and Trans Lives Matter" />
<link rel="canonical" href={canonicalURL} />
<link rel="alternate" type="application/rss+xml" title={site.title} href={blogRssFeed} />
<link href="https://uk.linkedin.com/in/lukealexdavis" rel="me">
<link href="https://bsky.app/profile/lukealexdavis.co.uk" rel="me">
<link href="https://github.com/starchildluke" rel="me">
<link rel="authorization_endpoint" href="https://indieauth.com/auth">
<link rel="vcard" href="https://lukealexdavis.co.uk/vcard.vcf">
<link rel="hippos" href="https://lukealexdavis.co.uk/hippos.txt">
<script>document.querySelectorAll(".nav-links a").forEach(e=>{e.href===window.location.href&&e.setAttribute("aria-current","page")});</script>
<!--Free Palestine! End the State of Israel's genocide! Freedom, justice, and peace for Haiti, Sudan, Yemen, and the Democratic Republic of Congo! -->
</head>
---
import lastFmData from '../data/lastfm.json';
---

<style>
	.klub {
		padding: 2rem 2rem 0.6rem 2rem;
		margin-bottom: 2rem;
		border-radius: 1rem;
	}
	.two-k, .one-k, .nine-hundred {
		color: #fff;
	}
	.two-k {
		background: #6A5720;
	}
	.one-k {
		background: #696969;
	}
	.nine-hundred {
		background: #915b27;
	}
</style>

<section class="klub two-k">
	<h2>2K+ Klub ðŸ¥‡</h2>
		<p><em>{lastFmData.topartists.artist.filter((item: any) => (
			item.playcount > 1999)).map(
				(artist) => artist.name
			).join(', ')}</em></p>
</section>

<section class="klub one-k">
	<h2>1K Klub ðŸ¥ˆ</h2>
		<p><em>{lastFmData.topartists.artist.filter((item: any) => (
			item.playcount > 999 && item.playcount < 1999)).map(
				(artist) => artist.name
		).join(', ')}</em></p>
</section>

<section class="klub nine-hundred">
	<h2>900 Klub ðŸ¥‰</h2>

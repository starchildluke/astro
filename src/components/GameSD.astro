---
import gamelog from '../data/gamelog.json';

let mentions = gamelog.map((game) => (
  {
    "@type": "VideoGame",
    "name": game.name,
    "image": "https://lukealexdavis.co.uk" + game.imageURL,
    "publisher": game.publisher,
    "gamePlatform": game.console,
    "genre": game.genre
  }
  )
);

let sd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebPage",
  "mentions": mentions
})

---
<script type="application/ld+json" set:html={sd}></script>
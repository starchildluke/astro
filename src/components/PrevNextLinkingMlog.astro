---
import prevNextMlog from '../data/next_prev_mlog.json';

function prevNextLinking() {

  for(let i = 0; i < prevNextMlog.length; i++)
{
  if(prevNextMlog[0]["url"] == Astro.url.pathname)
  {
    let prevLink = prevNextMlog[0]["link_data"][0]["prev"]
    let prevTitle = prevNextMlog[0]["link_data"][0]["title"]
    let nextLink = "";
    let nextTitle = "";
    return "<a href=" + prevLink + " class='post-pagination-item post-pagination-prev' >" + prevTitle + "</a>";
  } else if(prevNextMlog[prevNextMlog.length - 1]["url"] == Astro.url.pathname) {
    let prevLink = "";
    let prevTitle = "";
    let nextLink = prevNextMlog[prevNextMlog.length - 1]["link_data"][0]["next"]
    let nextTitle = prevNextMlog[prevNextMlog.length - 1]["link_data"][0]["title"]
    return "<a href=" + nextLink + " class='post-pagination-item post-pagination-next' >" + nextTitle + "</a>";
  } else if(prevNextMlog[i]["url"] == Astro.url.pathname) {
    let prevLink = prevNextMlog[i]["link_data"][0]["prev"]
    let prevTitle = prevNextMlog[i]["link_data"][0]["title"]
    let nextLink = prevNextMlog[i]["link_data"][1]["next"]
    let nextTitle = prevNextMlog[i]["link_data"][1]["title"]
    return "<a href=" + prevLink + " class='post-pagination-item post-pagination-prev'>" + prevTitle + "</a>"  + " " + "<a href=" + nextLink + " class='post-pagination-item post-pagination-next' >" + nextTitle + "</a>";
  }
}
}
---

<div class="post-pagination">
  <Fragment set:html={prevNextLinking()} />
</div>
---
interface Props {
        date: Date;
}

const { date } = Astro.props;

const newDate = new Date(date)
---

<time datetime={newDate.toISOString()}>
        {
                newDate.toLocaleDateString('en-gb', {
                        day: '2-digit',
                        month: 'short',
                }).replace("Sept", "Sep")
        }
</time>
---
const {name, imageURL, publisher, consoleName, genre} = Astro.props;

const mentions = {
    "@type": "VideoGame",
    "name": name,
    "image": "https://lukealexdavis.co.uk" + imageURL,
    "publisher": publisher,
    "gamePlatform": consoleName,
    "genre": genre
};

const sd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebPage",
  "mentions": mentions
})

---
<script type="application/ld+json" set:html={sd}></script>
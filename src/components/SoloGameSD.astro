---
const {name, imageURL, publisher, consoleName, genre, developer} = Astro.props;

const sd = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "VideoGame",
    "name": name,
    "image": "https://lukealexdavis.co.uk" + imageURL,
    "publisher": publisher,
    "gamePlatform": consoleName,
    "genre": genre,
    "inLanguage": ["English", "Japanese"],
    "author": {
      "@type": "Organization",
      "name": developer
    }

});

---
<script type="application/ld+json" set:html={sd}></script>
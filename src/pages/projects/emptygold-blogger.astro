---
// COMPONENTS

import Layout from '../../layouts/Layout.astro';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';

// METADATA VARIABLES

let title = 'Emptygold Blogger';
let description = 'Emptygold Blogger project page';

---
<Layout {title} {description}>
    <main class="layout">
      <article class="content">
        <h1>{title}</h1>
          <table>
            <tbody>
              <tr>
                <td><span class="table-cells"><strong>Date established</strong></span></td>
                <td>2023</td>
              </tr>
              <tr>
                <td><span class="table-cells"><strong>Link</strong></span></td>
                <td><a href="https://emptygold.blog/">emptygold.blog</a></td>
              </tr>
              <tr>
                <td><span class="table-cells"><strong>Made with</strong></span></td>
                <td><a href="https://wordpress.org/">WordPress</a></td>
              </tr>
            </tbody>
          </table>
          <h2>Description</h2>
          <p>Emptygold Blogger is a Tumblr-style personal blog. <a href="/post/emptygold-blogger/">Read more about how I started it on this blog post.</a></p>
      </article>
    </main>
    <Footer/>
  </body>
</html>
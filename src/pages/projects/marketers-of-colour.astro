---

// COMPONENTS

import BaseHead from '../../components/BaseHead.astro';
import BlogHeader from '../../components/BlogHeader.astro';
import BlogFooter from '../../components/BlogFooter.astro';
import BlogPostPreview from '../../components/BlogPostPreview.astro';

// METADATA VARIABLES

let metaTitle = ' | Luke Davis';
let title = 'Marketers of Colour';
let description = 'Marketers of Colour project page';
let canonicalURL = Astro.url;

---
<html lang="en">
  <head>
    <BaseHead title={title + metaTitle} description={description} canonicalURL={canonicalURL} />
    <style>.table-cells {font-family: Georgia, serif;}</style>
  </head>
  <body>
    <BlogHeader />
    <main class="layout">
      <article class="content">
        <h1>{title}</h1>
          <table>
            <tbody>
              <tr>
                <td><span class="table-cells"><strong>Date established</strong></span></td>
                <td>2020</td>
              </tr>
              <tr>
                <td><span class="table-cells"><strong>Link</strong></span></td>
                <td><a href="https://marketersofcolour.com/">marketersofcolour.com</a></td>
              </tr>
              <tr>
                <td><span class="table-cells"><strong>Made with</strong></span></td>
                <td><a href="https://wordpress.org/">WordPress</a></td>
              </tr>
            </tbody>
          </table>
          <h2>Description</h2>
          <p>Marketers of Colour is a blog about marketers of colour and their achievements in the industry.</p>
      </article>
    </main>
    <BlogFooter></BlogFooter>
  </body>
</html>
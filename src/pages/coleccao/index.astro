---

// COMPONENTS

import { Markdown } from 'astro/components';
import BaseHead from '../../components/BaseHead.astro';
import ColeccaoHeader from '../../components/ColeccaoHeader.astro';
import BlogFooter from '../../components/BlogFooter.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import site from '../../data/site.json';
import wiki from '../../data/wiki.json';
import img from '../../data/images.json';

// EXPORT

export interface Props {
  post: any;
}

// PROPS

const { post } = Astro.props;

// METADATA VARIABLES

let metaTitle = ' | Luke Alex Davis';
let title = 'colec√ßao';
let slug = '/coleccao/';
let description = "a collection of images.";
let domain = "https://lukealexdavis.co.uk"
let imgURL = "https://img.cultrface.co.uk/coleccao-media/"

---

<html lang="en">
  <head>
    <BaseHead title={title + metaTitle} description={description} canonicalURL={domain + slug} />
    <link rel="stylesheet" href="/style/blog.css" />

    <style>
      
      body {
        width: 100%;
        display: flex;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-bottom: 8rem;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .intro {
        padding-bottom: 1.4rem;
      }

      .intro > * {
        margin: 0;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .post-listing {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
      }

      .post-preview {
        padding-bottom: 1rem;
      }

      .post-listing a {
        max-width: 60%;
      }

      .publish-date {
        letter-spacing: 2px;
      }

      header {
        display: flex;
        flex-direction: column;
        text-align: left;
        align-items: flex-start;
        justify-content: center;
        padding-bottom: 2rem;
      }

      .desc {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-grey-800);
      }

      .title, .publish-date {
        margin: 0;
      }

      .publish-date {
        text-transform: uppercase;
        letter-spacing: 2px;
      }

      .title {
        font-size: 2.25rem;
        font-weight: 700;
        color: var(--theme-text);
      }

      .coleccao-layout {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding: 2rem 0;
        width: 90%;
        margin: 0 auto;
      }

      .coleccao-box {
        margin-bottom: 1rem;
        width: calc( (100% - 2rem) / 3);
      }

      .coleccao-box img {
        object-fit: cover;
      }

      .coleccao-box a:hover img {
        opacity: 0.75;
      }

      .coleccao-box p {
        font-size: smaller;
      }


    </style>
    
  </head>

  <body>
    <ColeccaoHeader />
      <article>
          <section class="coleccao-layout">
                  {img.images.map((item) => (
                      <figure class="coleccao-box">
                        <a href={item.url}><img src={imgURL + item.img} alt={item.alt} loading="lazy"></a>
                        <figcaption>{item.alt}</figcaption>
                      </figure>
                 ))}
          </section>
      </article>
    <BlogFooter />
  </body>
</html>
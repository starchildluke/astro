---
// COMPONENTS

import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogFooter from '../components/BlogFooter.astro';
import BlogPostPreview from '../components/BlogPostPreview.astro';

// METADATA VARIABLES

let metaTitle = ' | Luke Davis';
let title = 'Ducks';
let description = 'A list of my favourite ducks, in order.';
let slug = '/ducks';
let canonicalURL = Astro.canonicalURL.href;

---
<html lang="en">
  <head>
    <BaseHead title={title + metaTitle} description={description} canonicalURL={canonicalURL} />
    <link rel="stylesheet" href="/style/blog.css" />

    <style>
      body {
        width: 100%;
        display: flex;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-bottom: 8rem;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .intro {
        padding-bottom: 1.4rem;
      }

      .intro > * {
        margin: 0;
      }

      .latest {
        font-size: 2.5rem;
        font-weight: 700;
      }
    </style>
  </head>

  <body>
    <BlogHeader />
    <div class="layout">
      <article class="content">
        <section class="intro">
          <h1>{title}</h1>
        </section>
        <section>
                  <h2>My favourite ducks.</h2>
                  <ol>
                    <li>Donald Duck</li>
                    <li>Count Duckula</li>
                    <li>Duck from Rosie & Jim</li>
                    <li>Daffy Duck</li>
                    <li><a href="https://twitter.com/MusicologyDuck/">Musicology Duck</a></li>
                    <li>Darkwing Duck</li>
                    <li>Dewey, Huey, and Louie Duck</li>
                    <li>Alfred Kwak</li>
                    <li>Wade Duck from Garfield & Friends</li>
                    <li>The Mighty Ducks</li>
                    <li>Scrooge McDuck</li>
                  </ol>
      
    </section>
       

      </article>
          </div>
           <BlogFooter></BlogFooter>
  </body>
</html>

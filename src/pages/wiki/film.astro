---
// COMPONENTS

import BaseHead from '../../components/BaseHead.astro';
import BlogHeader from '../../components/BlogHeader.astro';
import BlogFooter from '../../components/BlogFooter.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import site from '../../data/site.json';
import wiki from '../../data/wiki.json'

// EXPORT

export interface Props {
  post: any;
  metaTitle: string;
  title: string;
  slug: string;
  description: string;
  domain: string;
}

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const remoteData = await fetch('https://cultrface.co.uk/wp-json/wp/v2/posts?categories=177&per_page=10').then(response => response.json());

// METADATA VARIABLES

let title = 'Film';
let slug = '/wiki/film/';
let description = 'A wiki page all about films.';
let domain = "https://lukealexdavis.co.uk"

---
<html lang="en">
  <head>
    <BaseHead title={'wiki/' + title.toLowerCase()} description={description} canonicalURL={domain + slug} />
  </head>
  <body>
    <BlogHeader />
    <div class="layout">
      <article class="content">
        <Breadcrumbs title={title}/>
        <section class="intro">
          <h1>{title}</h1>
          <p class="desc">{description}</p>
        </section>
        <section>
          
          <h2 class="wiki-h2">Inner voice</h2>
          
          <ul>
            <li><a href="/post/1001-movies-you-must-see-before-you-die-2008-edition/">/1001-movies-you-must-see-before-you-die-2008-edition.md</a></li>
            <li><a href="/post/bad-boys-for-years/">/bad-boys-for-years.md</a></li>
            <li><a href="/post/black-panther-and-therapy/">/black-panther-and-therapy.md</a></li>
            <li><a href="/post/still-elephant/">/still-elephant.md</a></li>
            <li><a href="/post/letterboxd-year-review-2022/">/letterboxd-year-review-2022.md</a></li>
          </ul>
          
        </section>
        
        <section>
          <h2 class="wiki-h2">Out loud</h2>
          <ul class="post-list">
            {remoteData.map((item) => (
            <li class="post-preview wiki-listing post-list">
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
          </ul>
          <h2 class="wiki-h2">Second opinions</h2>
          
          <ul>
            <li>Coming soon</li>
          </ul>
          
        </section>
      </article>
      
    </div>
    <BlogFooter></BlogFooter>
  </body>
</html>
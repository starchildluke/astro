---
// COMPONENTS

import BaseHead from '../../components/BaseHead.astro';
import BlogHeader from '../../components/BlogHeader.astro';
import BlogFooter from '../../components/BlogFooter.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import site from '../../data/site.json';
import wiki from '../../data/wiki.json';
import tags from '../../data/tags.json';

// EXPORT

export interface Props {
  post: any;
  metaTitle: string;
  title: string;
  slug: string;
  description: string;
  domain: string;
}

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const cultrData = await fetch('https://cultrface.co.uk/wp-json/wp/v2/posts?tags=136&per_page=3').then(response => response.json());
const logicData = await fetch('https://logicface.co.uk/wp-json/wp/v2/posts?tags=22&per_page=3').then(response => response.json());
const daData = await fetch('https://distantarcade.co.uk/wp-json/wp/v2/posts?categories=137&per_page=4').then(response => response.json());

// METADATA VARIABLES

let title = 'Pokémon';
let slug = '/wiki/pokemon/';
let description = 'A wiki page all about Pokémon.';
let domain = "https://lukealexdavis.co.uk"

---
<html lang="en">
  <head>
    <BaseHead title={'wiki/' + title.toLowerCase()} description={description} canonicalURL={domain + slug} />
  </head>

  <body>
    <BlogHeader />
      <div class="layout">
        <article class="content">
          <Breadcrumbs title={title}/>
            <section class="intro">

              <h1>{title}</h1>
              <p class="desc">{description}</p>
              <p><strong>Pokémon</strong> is a video game franchise created by Satoshi Tajiri that began in 1996 with the release of <em>Pokémon Red and Green</em>. It revolutionized the gaming industry, with its unique take on monster collecting and RPG battling, and inadvertently revived the life cycle of the Game Boy, nearly a decade after its release. With over 1,000 different species to collect and train, Pokémon is a global phenomenon and one very close to my heart.</p>
              <p><strong>Related terms</strong>: <a href="/wiki/gaming/">gaming</a> | <a href="/wiki/japan/">Japan</a></p>
            </section>
            <section>
             
              <h2 class="wiki-h2">Inner voice</h2>
                <ul>
                  <li class="post-preview wiki-listing post-list"><strong><a href="https://centiskor.ch/">centiskor.ch</a></strong></li>
            {tags["Pokémon"].map((tag) => (
            <li class="post-preview wiki-listing post-list">
              <a href={tag.link}>{tag.title}</a>
            </li>
          ))}
        </ul>
            </section>
      
            <section>
              <h2 class="wiki-h2">Out loud</h2>
              <ul class="post-list">
                {cultrData.map(( post ) => (
                  <li class="post-preview wiki-listing post-list">
                    <a href={post.link}><Fragment set:html={post.title.rendered}></a>
                  </li>
                ))}
                {logicData.map((post) => (
                <li class="post-preview wiki-listing post-list">
            <a href={post.link}><Fragment set:html={post.title.rendered}></a>
          </li>
             ))}
             {daData.map((post) => (
                <li class="post-preview wiki-listing post-list">
            <a href={post.link}><Fragment set:html={post.title.rendered}></a>
          </li>
             ))}
              </ul>
            </section>
        </article>
      
      </div>
    
    <BlogFooter></BlogFooter>
  
  </body>

</html>

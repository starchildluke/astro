---
// COMPONENTS

import BaseHead from '../../components/BaseHead.astro';
import BlogHeader from '../../components/BlogHeader.astro';
import BlogFooter from '../../components/BlogFooter.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import site from '../../data/site.json';
import wiki from '../../data/wiki.json'

// EXPORT

export interface Props {
  post: any;
}

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const remoteData = await fetch('https://playrface.co.uk/wp-json/wp/v2/posts?tags=62').then(response => response.json());

// METADATA VARIABLES

let title = 'Happiness';
let slug = '/wiki/happiness/';
let description = "A wiki page all about happiness.";
let domain = "https://lukealexdavis.co.uk"

---
<html lang="en">
  <head>
    <BaseHead title={'wiki/' + title.toLowerCase()} description={description} canonicalURL={domain + slug} />
    </style>
  </head>
  <body>
    <BlogHeader />
    <div class="layout">
      <article class="content">
        <Breadcrumbs title={title}/>
        <section class="intro">
          <h1>{title}</h1>
        </section>
        <section>
          <h2 class="wiki-h2">Inner voice</h2>
          
          <ul>
            <li><a href="/post/happy-accident-1/">/happy-accident-1.md</a></li>
            <li><a href="/post/proust-questionnaire/">/proust-questionnaire.md</a></li>
            <li><a href="/post/proust-questionnaire-2020/">/proust-questionnaire-2020.md</a></li>
          </ul>
          
        </section>
        <section>
          
          <section>
            <h2 class="wiki-h2">Out loud</h2>
            <ul class="post-list">
              <li class="post-preview post-listing post-list">
                Coming soon...
              </li>
            </ul>
            <h2 class="wiki-h2">Second opinions</h2>
            <ul>
              <li><a href="https://www.youtube.com/watch?v=OjhBeB9ESqw">"What do I really want? What is really going to make me happy... now?"</a></li>
            </ul>
          </section>
        </section>
      </article>
      
    </div>
    <BlogFooter></BlogFooter>
  </body>
</html>
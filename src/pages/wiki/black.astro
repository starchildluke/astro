---
// COMPONENTS

import BaseHead from '../../components/BaseHead.astro';
import BlogHeader from '../../components/BlogHeader.astro';
import BlogFooter from '../../components/BlogFooter.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import site from '../../data/site.json';
import wiki from '../../data/wiki.json'

// EXPORT

export interface Props {
  post: any;
}

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const remoteData = await fetch('https://cultrface.co.uk/wp-json/wp/v2/posts?categories=828&per_page=5').then(response => response.json());

const remoteData2 = await fetch('https://sampleface.co.uk/wp-json/wp/v2/posts?tags=2622&per_page=5').then(response => response.json());

const remoteData3 = await fetch('https://logicface.co.uk/wp-json/wp/v2/posts?categories=236&per_page=5').then(response => response.json());

// METADATA VARIABLES

let title = 'Black';
let slug = '/wiki/black/';
let description = "A wiki page all about blackness.";
let domain = "https://lukealexdavis.co.uk"

---
<html lang="en">
  <head>
    <BaseHead title={'wiki/' + title.toLowerCase()} description={description} canonicalURL={domain + slug} />
  </head>
  <body>
    <BlogHeader />
    <div class="layout">
      <article class="content">
        <Breadcrumbs title={title}/>
        <section class="intro">
          <h1>{title}</h1>
        </section>
        <section>
          <h2 class="wiki-h2">Inner voice</h2>
          
          <ul>
            <li><a href="/post/1-year-later/">/1-year-later.md</a></li>
            <li><a href="/post/4-article-ideas-the-read/">/4-article-ideas-the-read.md</a></li>
            <li><a href="/post/beyond-tired-part-2/">/beyond-tired-part-2.md</a></li>
            <li><a href="/post/beyond-tired-3/">/beyond-tired-3.md</a></li>
            <li><a href="/post/beyond-tired-4/">/beyond-tired-4.md</a></li>
            <li><a href="/post/black-and-tired/">/black-and-tired.md</a></li>
            <li><a href="/post/black-panther-and-therapy/">/black-panther-and-therapy.md</a></li>
            <li><a href="/post/black-survival-is-black-excellence/">/black-survival-is-black-excellence.md</a></li>
            <li><a href="/post/blackness/">/blackness.md</a></li>
            <li><a href="/post/im-racially-tired/">/im-racially-tired.md</a></li>
            <li><a href="/post/kamala-harris-is-still-a-cop/">/kamala-harris-is-still-a-cop.md</a></li>
            <li><a href="/post/night-off/">/night-off.md</a></li>
            <li><a href="/post/rip-mj-8-years-on/">/rip-mj-8-years-on.md</a></li>
            <li><a href="/post/we-are-not-data-points/">/we-are-not-data-points.md</a></li>
          </ul>
        </section>
        <section>
          
          <section>
            <h2 class="wiki-h2">Out loud</h2>
            <ul class="post-list">
              {remoteData.map((item) => (
              <li class="post-preview wiki-listing post-list">
                <a href={item.link}><Fragment set:html={item.title.rendered}></a>
              </li>
              ))}
              {remoteData2.map((item) => (
              <li class="post-preview wiki-listing post-list">
                <a href={item.link}><Fragment set:html={item.title.rendered}></a>
              </li>
              ))}
              {remoteData3.map((item) => (
              <li class="post-preview wiki-listing post-list">
                <a href={item.link}><Fragment set:html={item.title.rendered}></a>
              </li>
              ))}
            </ul>
            <h2 class="wiki-h2">Second opinions</h2>
            <ul>
              <li><a href="https://daily.jstor.org/the-history-of-black-owned-record-labels/">The History of Black-Owned Record Labels</a></li>
            </ul>
          </section>
        </section>
      </article>
      
    </div>
    <BlogFooter></BlogFooter>
  </body>
</html>
---
// COMPONENTS

import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import jardim from '../../data/jardim.json'

// METADATA VARIABLES

let title = 'Jardim';
let description = "A digital garden, or jardim, full of the things I love, with lots of ideas, rough drafts, and related miscellany.";

---
<Layout {title} {description}>

  <style>
    .jardim-list a {
      display:block;
      border-bottom: 0.5px solid #295f2b;
      padding: 1.4rem 1.4rem 0 1.4rem;
      text-decoration: none;
    }

    .jardim-list a:hover {
      background: #d8dfd7;
    }

    .jardim-list a p:first-child {
      padding-bottom: 0;
    }

    .jardim-list a p:last-child {
      color: black;
      font-weight: normal;
    }
  </style>

      <main class="layout">
        <article class="content">
            <section class="intro">
              <Header />
          <h1>{title}</h1>
        </section>
        <section>
          <p>Inspired by <a href="https://tomcritchlow.com/wiki/">Tom Critchlow's Wiki</a>, this is my digital garden, affectionally known as <span lang="pt">meu jardim</span>, or "my garden" in English. I collect blog posts (both my own and stuff I've found online), ideas, rough drafts, and things like that.</p>
          <p>For individual notes, you can also read my mini notes or <span lang="pt"><a href="/recortes/">recortes</a></span> ("cuttings" in English&mdash;to go with the garden theme).</p>
        </section>
      <section>
    <section class="jardim-list">
            {jardim.branches.map((item) => (
            <a href={item.url}>
              <p>{item.name}</p>
              <p>{item.desc}</p>
            </a>
             ))}
    </section>
    </section>
      </article>
      
    </main>
    <Footer/>
  </body>
</html>

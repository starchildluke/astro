---
// COMPONENTS

import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import Layout from '../../../layouts/Layout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import site from '../../../data/site.json';
import jardim from '../../../data/jardim.json'

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const remoteData = await fetch('https://logicface.co.uk/wp-json/wp/v2/posts?tags=148&per_page=10').then(response => response.json());

// METADATA VARIABLES

let title = 'Python';
let description = 'A wiki page all about Python.';

---
<Layout {title} {description}>
    <main class="layout">
      <article class="content">
        <Breadcrumbs title={title}/>
        <section class="intro">
          <h1>{title}</h1>
          <p class="desc">{description}</p>
        </section>
        <section>
          
          <h2 class="wiki-h2">Inner voice</h2>

          <p>Please check out my <a href="/morsels/">Morsels</a> for more Python scripts.</p>
          
          <ul>
            <li><a href="/posts/introducing-ralts/">/introducing-ralts.md</a></li>
            <li><a href="/posts/you-dont-have-to-learn-python-but-it-might-help/">/you-dont-have-to-learn-python-but-it-might-help.md</a></li>
            <li><a href="/posts/how-i-display-my-last-fm-top-1000-artists/">/how-i-display-my-last-fm-top-1000-artists.md</a></li>
          </ul>
          
        </section>
        
        <section>
          <h2 class="wiki-h2">Out loud</h2>
          <ul>
            {remoteData.map((item) => (
            <li>
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
          </ul>
          <h2 class="wiki-h2">Second opinions</h2>
          
          <ul><li>Coming soon...</li></ul>
          
        </section>
      </article>
      
    </main>
    <Footer/>
  </body>
</html>
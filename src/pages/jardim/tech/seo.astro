---
// COMPONENTS

import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import Layout from '../../../layouts/Layout.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import site from '../../../data/site.json';
import jardim from '../../../data/jardim.json'

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const remoteData = await fetch('https://logicface.co.uk/wp-json/wp/v2/posts?tags=337&per_page=10').then(response => response.json());

// METADATA VARIABLES

let title = 'SEO';
let description = 'A wiki page all about SEO.';

---
<Layout {title} {description}>
    <main class="layout">
      <article class="content">
        <Breadcrumbs title={title}/>
        <section class="intro">
          <h1>{title}</h1>
          <p class="desc">{description}</p>
        </section>
        <section>
          
          <h2 class="wiki-h2">Inner voice</h2>
          
          <ul>
            <li><a href="/posts/first-year-professional-seo/">/first-year-professional-seo.md</a></li>
            <li><a href="/posts/second-year-professional-seo/">/second-year-professional-seo.md</a></li>
            <li><a href="/posts/third-year-professional-seo/">/third-year-professional-seo.md</a></li>
            <li><a href="/posts/fourth-year-professional-seo/">/fourth-year-professional-seo.md</a></li>
            <li><a href="/posts/introducing-ralts/">/introducing-ralts.md</a></li>
            <li><a href="/posts/a-poem-about-how-search-engines-cant-interpret-poems/">/a-poem-about-how-search-engines-cant-interpret-poems.md</a></li>
            <li><a href="/posts/seoicism/">/seoicism.md</a></li>
          </ul>
          
        </section>
        
        <section>
          <h2 class="wiki-h2">Out loud</h2>
          <ul>
            {remoteData.map((item) => (
            <li>
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
          </ul>
          <h2 class="wiki-h2">Second opinions</h2>
          
          <ul><li>Coming soon...</li></ul>
          
        </section>
      </article>
      
    </main>
    <Footer/>
  </body>
</html>
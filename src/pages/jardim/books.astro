---
// COMPONENTS

import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import site from '../../data/site.json';
import jardim from '../../data/jardim.json'

// PROPS

const { post } = Astro.props;

// HOW FETCHING!

const remoteData = await fetch('https://cultrface.co.uk/wp-json/wp/v2/posts?categories=167&per_page=3').then(response => response.json());

const remoteData2 = await fetch('https://distantarcade.co.uk/wp-json/wp/v2/posts?tags=257&per_page=3').then(response => response.json());

const remoteData3 = await fetch('https://sampleface.co.uk/wp-json/wp/v2/posts?tags=3000&per_page=3').then(response => response.json());

const remoteData4 = await fetch('https://logicface.co.uk/wp-json/wp/v2/posts?tags=277&per_page=3').then(response => response.json());

// METADATA VARIABLES

let title = 'Books';
let description = 'A page all about books.';

---
<Layout {title} {description}>
    <main class="layout">
      <article class="content">
        <Breadcrumbs title={title}/>
        <section class="intro">
          <h1>{title}</h1>
          <p class="desc">{description}</p>
        </section>
        <section>
          
          <h2 class="wiki-h2">Inner voice</h2>
          
          <p>Coming soon...</p>
          
        </section>
        
        <section>
          <h2 class="wiki-h2">Out loud</h2>
          <ul>
            {remoteData.map((item) => (
            <li>
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
            {remoteData2.map((item) => (
            <li>
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
            {remoteData3.map((item) => (
            <li>
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
            {remoteData4.map((item) => (
            <li>
              <a href={item.link}><Fragment set:html={item.title.rendered}></a>
            </li>
            ))}
          </ul>
          <h2 class="wiki-h2">Second opinions</h2>
          
          <ul>
            <li>Coming soon...</li>
          </ul>
          
        </section>
      </article>
      
    </main>
    <Footer/>
  </body>
</html>
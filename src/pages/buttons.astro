---
// COMPONENTS

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ButtonsComponent from '../components/ButtonsComponent.astro';

// METADATA VARIABLES

let title = 'Buttons';
let description = 'A page full of my favourite 88x31 web buttons.';
let canonicalURL = Astro.url;

---

<style>
  .buttons {
    line-height: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 100%;
    gap: 0.5rem;
    image-rendering: pixelated;
  }
</style>

<BaseHead title={title} description={description} canonicalURL={canonicalURL} />
<body>
<main class="layout">
  <article class="content">
    <Header />
      <h1>{title}</h1>
      <p>{description} 88Ã—31 buttons from <a href="https://yesterweb.org/graphics/buttons">yesterweb.org</a>, <a href="https://lmnt.me/badges/">lmnt.me</a>, <a href="https://capstasher.neocities.org/88x31collection-page1">capstasher.neocities.org</a> and various Tumblrs.</p>
      <section class="buttons">
        <ButtonsComponent />
      </section>
      </article>
    </main>
  <Footer />
</body>
</html>
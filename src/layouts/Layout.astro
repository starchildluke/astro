---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import StructuredData from '../components/StructuredData.astro';

interface Props {
  title: string;
  description: string;
  pubDate: string;
  canonicalURL: string;
}

const { title, description, pubDate, canonicalURL = Astro.url } = Astro.props;

---
<html lang="en-GB">
  <BaseHead {title} {description} {canonicalURL} />
  <StructuredData {title} {pubDate} />
  <body>
    <Header />
      <slot />
  </body>
</html>
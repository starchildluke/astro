---
import BaseHead from '../components/BaseHead.astro';
import StructuredData from '../components/StructuredData.astro';
import BreadcrumbsSD from '../components/BreadcrumbsSD.astro';

interface Props {
  title: string;
  description: string;
  pubDate: string;
  canonicalURL: string | URL;
  url: string | URL;
  robotsTag: string;
}

const { title, description, pubDate, robotsTag, canonicalURL = Astro.url, url } = Astro.props;

---
<html lang="en-GB">
  <BaseHead {title} {description} {canonicalURL} {robotsTag}/>
  <StructuredData {title} {pubDate} />
  {canonicalURL.href.indexOf("jardim") ? <BreadcrumbsSD url={canonicalURL} /> : null}
  <body>
      <slot />
  </body>
</html>